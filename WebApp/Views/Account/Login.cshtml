@model WebApp.Models.AccountViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <h2 class="h2 text-center mt-5">Login</h2>
    <hr />

    <form class="form form-horizontal" method="post" action="/account/loginuser">
        <div class="form-group">
            <label for="email" class="col-form-label">Email</label>
            <input type="text" name="Email" id ="email" class="form-control" />
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="password" class="col-form-label">Password</label>
            <input type="password" name="Password" id="password" class="form-control" />
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
                <label for="remember-me" class="col-form-label">Remember Me?<input type="checkbox" name="RememberMe" id="remember-me" class="pointer ml-3 form-control-md" /></label>
        </div>
        <div class="form-group d-flex justify-content-between">
            <button type="submit" type="button" class="btn btn-success">Log in</button>
        </div>
    </form>
    <a href="/account/forgotpassword">Forgot password?</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
