<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WetMyPlants</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body class="bg-light text-primary">

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
    }
    #nav-user-options {
        position: absolute;
        right: 10px;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        -webkit-justify-content: flex-end;
    }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-primary shadow border-dark border-bottom text-light">
    <a class="navbar-brand"><img src="../../Content/wmp_icon.png" style="height: 38px;"> WetMyPlants</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navigation">
        @if (Session["User"] != null)
        {
            <ul class="nav navbar-nav">
                <li>
                    <a class="nav-item nav-link text-light" href="~/home">Home</a>
                </li>
            </ul>
            <ul class="nav navbar-nav" id="nav-user-options">
                <li>
                    <a class="nav-item nav-link text-light" href="/account/myaccount">My Account</a>
                </li>
                <li>
                    <a class="nav-item nav-link text-light" href="/account/logout">Log Out</a>
                </li>
            </ul>
        }
        else
        {
            @* Somehow change nav bar from "Login | Register" to "My Account" when a user is logged in *@
            <ul class="nav navbar-nav" id="nav-user-options">
                <li>
                    <a class="nav-item nav-link text-light" href="/account/login">Login</a>
                </li>
                <li>
                    <a class="nav-item nav-link text-light" href="/account/register">Register</a>
                </li>              
            </ul>
        }
    </div>
</nav>

<div class="body-content">
    @RenderBody()
    <footer class="fixed-bottom px-3">
        <hr />
        <p>&copy; @DateTime.Now.Year - WetMyPlants</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>